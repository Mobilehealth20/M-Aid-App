<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backg1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                android:id="@+id/btnPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#9A261D"
                android:drawableTop="@drawable/ic_stat_book"
                android:drawablePadding="8dp"
                android:onClick="logout"
                android:padding="5dp"
                android:text="BOOK APPOINTMENT"
                android:layout_gravity="start"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="15dp" />

            <Button
                android:id="@+id/textMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#9A261D"
                android:drawableTop="@drawable/ic_stat_loc"
                android:drawablePadding="8dp"
                android:padding="5dp"
                android:text="Location"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="logout"
                    android:layout_gravity="end"
                    android:backgroundTint="#9A261D"
                    android:padding="5dp"
                    android:drawableTop="@drawable/ic_stat_log"
                    android:drawablePadding="8dp"
                    android:text="logout"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/textEmergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#9A261D"
                android:drawableStart="@drawable/ic_stat_hop"
                android:drawableEnd="@drawable/ic_stat_hop"
                android:drawablePadding="5dp"
                android:text="EMERGENCY"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textResuscitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="RESUSCITATION"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textSeizure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="SEIZURE"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="STROKE"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textAsthma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="ASTHMA"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textPoisoning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="POISONING"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="HEAD INJURY"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textDrowning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="DROWNING"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textChoking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="CHOKING"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textChest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="CHEST PAIN"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textBleeding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="BLEEDING"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textBurns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="BURNS"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textBones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_stat_next"
                android:drawableRight="@drawable/ic_stat_next"
                android:drawablePadding="5dp"
                android:padding="20dp"
                android:text="BONES AND MUSCLES"
                android:textColor="#000000"
                android:textSize="18sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>