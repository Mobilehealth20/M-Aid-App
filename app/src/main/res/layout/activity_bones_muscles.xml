<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BonesMuscles">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textChest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#422D2D"
                android:text="Bones and Muscles"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textChest1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:text="CALL 999 /  CALL 0700 999 999 Hospital emergency contact"
                android:textColor="#000000"
                android:textStyle="italic" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:padding="15dp"
                android:text="Fractures"
                android:textAlignment="center"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="1. Support the injured part and immobilise the affected part "
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="2. If breeding, contril the flow without pressing on any
protruding bones"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageBone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/bone2" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:padding="15dp"
                android:text="Sprains"
                android:textAlignment="center"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="1. Rest the injured part"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="2. Use an ice pack or cold compress for 10 mins"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="3. Find some comfortable support and elevate the injury
if possible"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="4. Seek medical advice"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageBone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/bone1" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:padding="15dp"
                android:text="Spinal Injury"
                android:textAlignment="center"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="1. Support Casualty's head and neck position they were found"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="2. Reassure the casualty"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="3. Do not move the casualty unless they are in danger"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="4. Monitor the casualty and continue to support their
head and neck"
                android:textStyle="bold" />

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:padding="15dp"
                android:text="5. Maintain an open airway if necessary an move the casualty
into the recovery position"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>